profile default {
  output eDP-1 enable
}

profile extend-dp-1 {
  output DP-1 enable
  output eDP-1 disable
  exec sh -c 'hyprctl dispatch -- workspace 1 && hyprctl dispatch -- movecurrentworkspacetomonitor DP-1'
}

profile extend-dp-3 {
  output DP-3 {
    enable
    mode 1920x1200
    position 0,0
  }
  output eDP-1 disable
  exec sh -c 'hyprctl dispatch -- workspace 1 && hyprctl dispatch -- movecurrentworkspacetomonitor DP-3'
}

profile extend-hdmi-a-1 {
  output HDMI-A-1 enable
  output eDP-1 disable
  exec sh -c 'hyprctl dispatch -- workspace 1 && hyprctl dispatch -- movecurrentworkspacetomonitor HDMI-A-1'
}

profile mirror-dp-3 {
  output eDP-1 {
    enable
    mode 1920x1080
    position 0,0
  }
  output DP-3 {
    enable
    mode 1920x1080
    position 1920,0
  }
}
