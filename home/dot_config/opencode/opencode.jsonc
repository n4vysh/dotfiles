  "theme": "tokyonight",
  "share": "disabled",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "ls": "allow",
      "grep": "allow",
      "rg": "allow",
      "find *": "allow",
      "find * -exec*": "ask",
      "find * -delete*": "ask",
      "fd": "allow",
      "head": "allow",
      "tail": "allow",
      "git show": "allow",
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow",
      "terraform init -backend=false": "allow",
      "terragrunt init -backend=false": "allow",
      "terragrunt validate": "allow",
      "terraform state list": "allow",
      "terraform show": "allow",
      "terraform console": "allow",
      "terraform fmt": "allow",
      "terraform test": "allow",
      "terraform validate": "allow",
      "terraform-docs": "allow",
      "jq": "allow",
      "wc": "allow",
      "echo": "allow"
    }
  },
  "keybinds": {
    "input_submit": "ctrl+s",
    "editor_open": "<leader>ctrl+e",
    "input_newline": "return",
    "session_child_cycle": "ctrl+meta+l",
    "session_child_cycle_reverse": "ctrl+meta+h"
  },
  "formatter": {
    "terraform-fmt": {
      "command": ["terraform", "fmt", "$FILE"],
      "extensions": [".tf", ".tfvars"]
    }
  },
  "lsp": {
    "terraform-ls": {
      "disabled": false,
      "command": ["terraform-ls", "serve"],
      "extensions": [".tf", ".tfvars"]
    }
  },
  "mcp": {
    "aws-knowledge-server": {
      "enabled": false,
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws"
    },
    "terraform-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--pull=always",
        "hashicorp/terraform-mcp-server"
      ]
    },
    "playwright-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--init",
        "--pull=always",
        "mcr.microsoft.com/playwright/mcp"
      ]
    },
    "context7-server": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
