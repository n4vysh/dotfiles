{
  "$schema": "https://opencode.ai/config.json",
  // openai codex
  "model": "openai/gpt-5.3-codex",
  // litellm bedrock claude
  // "model": "litellm/us.anthropic.claude-sonnet-4-5-20250929-v1:0",
  "provider": {
    "litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "litellm",
      "options": {
        "baseURL": "http://127.0.0.1:4000"
      },
      "models": {
        "bedrock/converse/us.anthropic.claude-sonnet-4-5-20250929-v1:0": {
          "name": "claude-sonnet-4.5"
        }
      }
    }
  },
  "theme": "tokyonight",
  "share": "disabled",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "ls": "allow",
      "ls *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "find": "allow",
      "find *": "allow",
      "find *-exec*": "ask",
      "find *-delete*": "ask",
      "fd": "allow",
      "fd *": "allow",
      "test *": "allow",
      "cat *": "allow",
      "pwd": "allow",
      "realpath *": "allow",
      "awk *": "allow",
      "sed *": "allow",
      "sed *-i*": "ask",
      "head": "allow",
      "head *": "allow",
      "tail": "allow",
      "tail *": "allow",
      "git blame *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git shortlog": "allow",
      "git shortlog *": "allow",
      "aws * get-* *": "allow",
      "aws * describe-* *": "allow",
      "kubectl get *": "allow",
      "kubectl describe *": "allow",
      "kubectl rollout history *": "allow",
      "helm show *": "allow",
      "helm template *": "allow",
      "helmfile template": "allow",
      "helmfile template *": "allow",
      "terraform init -backend=false": "allow",
      "terragrunt init -backend=false": "allow",
      "terragrunt validate": "allow",
      "terragrunt validate *": "allow",
      "terragrunt output": "allow",
      "terragrunt output *": "allow",
      "terragrunt state list": "allow",
      "terragrunt state list *": "allow",
      "terragrunt show": "allow",
      "terragrunt show *": "allow",
      "terraform state list": "allow",
      "terraform state list *": "allow",
      "terraform show": "allow",
      "terraform show *": "allow",
      "terraform console": "allow",
      "terraform console *": "allow",
      "terraform fmt": "allow",
      "terraform fmt *": "allow",
      "terraform test": "allow",
      "terraform test *": "allow",
      "terraform validate": "allow",
      "terraform validate *": "allow",
      "terraform output": "allow",
      "terraform output *": "allow",
      "terraform-docs *": "allow",
      "tflint": "allow",
      "tflint *": "allow",
      "git remote -v": "allow",
      "glab mr view": "allow",
      "glab mr view *": "allow",
      "glab mr diff": "allow",
      "glab mr diff *": "allow",
      "jq": "allow",
      "jq *": "allow",
      "wc": "allow",
      "wc *": "allow",
      "echo": "allow",
      "echo *": "allow"
    }
  },
  "keybinds": {
    "input_submit": "ctrl+s",
    "editor_open": "<leader>ctrl+e",
    "input_newline": "return",
    "session_child_cycle": "ctrl+meta+l",
    "session_child_cycle_reverse": "ctrl+meta+h"
  },
  "formatter": {
    "yamlfmt": {
      "command": ["yamlfmt", "$FILE"],
      "extensions": [".yml", ".yaml"]
    }
  },
  "mcp": {
    "aws-knowledge-server": {
      "enabled": false,
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws"
    },
    "terraform-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--pull=always",
        "hashicorp/terraform-mcp-server"
      ]
    },
    "playwright-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--init",
        "--pull=always",
        "mcr.microsoft.com/playwright/mcp"
      ]
    },
    "context7-server": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
