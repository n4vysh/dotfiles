{
  "nativeMCPServers": {
    "neovim": {
      "disabled": true
    }
  },
  "mcpServers": {
    "aws-knowledge": {
      "disabled": false,
      "disabled_tools": [],
      "url": "https://knowledge-mcp.global.api.aws"
    },
    "aws-terraform": {
      "disabled": false,
      "disabled_tools": [],
      "command": "uvx",
      "args": ["awslabs.terraform-mcp-server@1.0.3"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "hashicorp-terraform": {
      "disabled": false,
      "disabled_tools": [],
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name",
        "mcphub-terraform-mcp-server",
        "hashicorp/terraform-mcp-server:0.2.1"
      ]
    },
    "playwright": {
      "disabled": false,
      "disabled_tools": [],
      "command": "bunx",
      "args": ["@playwright/mcp@0.0.32", "--headless"]
    },
    "context7": {
      "disabled": false,
      "disabled_tools": [],
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
