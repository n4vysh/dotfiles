{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "share": "disabled",
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "keybinds": {
    "input_submit": "ctrl+s",
    "input_newline": "enter",
    "session_child_cycle": "ctrl+alt+l",
    "session_child_cycle_reverse": "ctrl+alt+h"
  },
  "mcp": {
    "aws-knowledge-server": {
      "enabled": false,
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws"
    },
    "terraform-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--pull=always",
        "hashicorp/terraform-mcp-server"
      ]
    },
    "playwright-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--init",
        "--pull=always",
        "mcr.microsoft.com/playwright/mcp"
      ]
    },
    "context7-server": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
