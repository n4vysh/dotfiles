{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "share": "disabled",
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "keybinds": {
    "input_submit": "ctrl+s",
    "input_newline": "enter"
  },
  "mcp": {
    "aws-knowledge-server": {
      "enabled": false,
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws"
    },
    "awslabs-terraform-server": {
      "enabled": false,
      "type": "local",
      "command": ["uvx", "awslabs.terraform-mcp-server@1.0.3"],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "hashicorp-terraform-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--name",
        "opencode-terraform-mcp-server",
        "--pull=always",
        "hashicorp/terraform-mcp-server"
      ]
    },
    "playwright-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--init",
        "--name",
        "opencode-playwright-mcp-server",
        "--pull=always",
        "mcr.microsoft.com/playwright/mcp"
      ]
    },
    "context7-server": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
